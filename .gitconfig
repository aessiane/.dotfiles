[alias]
        dlog = "!f() { GIT_EXTERNAL_DIFF=difft git log -p --ext-diff $@; }; f"
	dshow = "!f() { git show --ext-diff $@; }; f"
[init]
	defaultBranch = main

[diff]
	tool = difftastic
	external = difft

[difftool]
        prompt = false

[difftool "difftastic"]
        cmd = difft "$LOCAL" "$REMOTE"

[pager]
        difftool = true
[push]
	autoSetupRemote = true
[user]
	name = Abel Essiane
	email = abel@cohere.com
	signingkey = /Users/abel/.ssh/signing_id_ed25519.pub
[alias]
    ref-branch = "!f() { \
        git branch --remotes --points-at $1 | \
            grep -ve '->' | \
            sed -r 's!^ *[a-zA-Z_0-9]+/!!'; \
    }; f"
    ppush = "!f() { \
        ppush.sh \"$@\"; \
    }; f"
[pull]
	rebase = true
[credential]
	helper = 
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[gpg]
	format = ssh
